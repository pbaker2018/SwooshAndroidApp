<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/backgroundWelcome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="91dp"
            android:layout_height="34dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/swooshLogo" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="@+id/backgroundWelcome" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498" android:scaleType="center"/>
    <TextView
            android:layout_width="293dp"
            android:layout_height="51dp"
            android:id="@+id/goAllInTxt" tools:text="GO ALL IN"
            android:textAlignment="center" android:textSize="46sp" android:textColor="@color/colorAccent"
            android:layout_marginStart="4dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/swooshLogo" android:fontFamily="@font/montserrat"
    />
    <TextView
            android:text="TextView"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:id="@+id/goingAllOutTxt" android:textAlignment="center"
            tools:text="ON GOING ALL OUT" android:textSize="22sp" android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat"
            app:layout_constraintTop_toBottomOf="@+id/goAllInTxt" android:textStyle="bold"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="226dp"
            android:layout_height="48dp"
            android:id="@+id/longTxt"
            tools:text="Find a team in your city and dominate the league" android:textAlignment="center"
            android:textColor="@color/colorAccent" android:singleLine="false" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/goingAllOutTxt" android:fontFamily="@font/montserrat"
    />
    <Button
            android:text="Button"
            android:layout_width="339dp"
            android:layout_height="34dp"
            android:id="@+id/getStartedBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" tools:text="Get Started"
            android:textColor="@color/colorAccent" android:background="@drawable/swoosh_button" android:textSize="18sp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="@+id/backgroundWelcome"
            android:fontFamily="@font/montserrat"/>
</android.support.constraint.ConstraintLayout>